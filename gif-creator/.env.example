# Google AI API Configuration (preferred variable name)
GEMINI_API_KEY=your_google_api_key_here

# Model Selection (gemini or flux)
MODEL_CHOICE=gemini

# Security: Set to 'true' to bind to all interfaces (0.0.0.0) for external access
# WARNING: Only enable this in secure environments or with proper firewall rules
BIND_ALL_INTERFACES=false

# Public sharing: Set to 'true' to create a public gradio.live tunnel URL
# WARNING: This creates a publicly accessible link that anyone can use
SHARE_PUBLIC=false